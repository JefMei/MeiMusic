<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_line_height"
        android:layout_marginTop="25dp"
        android:background="@color/view_line_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#7D7D7D"
        android:textSize="12sp"
        android:text="现在可以根据个人喜好，自由调整首页栏目顺序啦~"/>

    <TextView
        android:id="@+id/tv_change_individuality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:background="@drawable/tv_change_indivi_bg"
        android:textColor="@color/tv_changge_color"
        android:textSize="12sp"
        android:text="调整栏目顺序"/>

</LinearLayout>
