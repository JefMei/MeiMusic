<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lin_height_title_ranking"
        android:layout_marginBottom="@dimen/lin_maginbottom_title_ranking"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/v_width_title_ranking"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tv_maginleft_title_ranking"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/tv_textsize_title_ranking"
            android:textColor="@color/tv_textcolor_title_ranking"
            android:text="@string/tv_official_ranking"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyc_ranking_official"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
