<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="125dp">

        <ImageView
            android:id="@+id/image_item_exclusive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_item_exclusive_headset"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"/>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_item_exclusive_introdution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/tv_text_padding_individuality"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/tv_textsize_item_individuality"
        android:textColor="@color/tv_recommend_introdution_individuality"
        android:text="有木有一首歌，触动到了你正经的爱情"/>

</LinearLayout>
